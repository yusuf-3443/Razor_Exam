@page
@model RazorApp.Pages.Customer.DeleteCustomerModel
@{
    ViewData["Title"] = "Delete Category";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        /* Стили для страницы удаления категории */
         body{
    background-color: #dee9ff;
}

li
{
    font-size: 18px;
}

.registration-form{
	padding: 50px 0;
}

.registration-form form{
    background-color: #fff;
    max-width: 600px;
    margin: auto;
    padding: 50px 70px;
    border-top-left-radius: 30px;
    border-top-right-radius: 30px;
    box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.075);
}

.registration-form .form-icon{
	text-align: center;
    background-color: #5891ff;
    border-radius: 50%;
    font-size: 40px;
    color: white;
    width: 100px;
    height: 100px;
    margin: auto;
    margin-bottom: 50px;
    line-height: 100px;
}

.registration-form .item{
	border-radius: 20px;
    margin-bottom: 25px;
    padding: 10px 20px;
}

.create-cancel
{
     border-radius: 30px;
    padding: 10px 20px;
    font-size: 18px;
    font-weight: bold;
    background-color: rgb(4, 212, 4);
    border: none;
    color: white;
    margin-top: 20px;
}

.registration-form .create-account{
    border-radius: 30px;
    padding: 10px 20px;
    font-size: 18px;
    font-weight: bold;
    background-color: #dc3545;
    border: none;
    color: white;
    margin-top: 20px;
}

.create-account:hover
{
    border: 4px solid #a10313;
}

.create-cancel:hover
{
    border: 4px solid rgb(1, 124, 1);
    color: white;
}

.registration-form .social-media{
    max-width: 600px;
    background-color: #fff;
    margin: auto;
    padding: 35px 0;
    text-align: center;
    border-bottom-left-radius: 30px;
    border-bottom-right-radius: 30px;
    color: #9fadca;
    border-top: 1px solid #dee9ff;
    box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.075);
}

.registration-form .social-icons{
    margin-top: 30px;
    margin-bottom: 16px;
}

.registration-form .social-icons a{
    font-size: 23px;
    margin: 0 3px;
    color: #5691ff;
    border: 1px solid;
    border-radius: 50%;
    width: 45px;
    display: inline-block;
    height: 45px;
    text-align: center;
    background-color: #fff;
    line-height: 45px;
}

.registration-form .social-icons a:hover{
    text-decoration: none;
    opacity: 0.6;
}

    .registration-form .form-icon{
        width: 70px;
        height: 70px;
        font-size: 30px;
        line-height: 70px;
    }
}
    </style>
</head>
<body>
        <div class="registration-form">
<form method="post">
    <h1>@ViewData["Title"]</h1>

    <input type="hidden" asp-for="Id" />
    <p>Are you sure you want to delete this customer?</p>
    <button type="submit" class="btn btn-block create-account">Delete</button>
    <a asp-page="/Customer/GetCustomers" class="btn btn-block create-cancel">Cancel</a>
</form>
    <div class="registration-form">

</body>
</html>